{
  "manifest_version": 2,
  "name": "X Post Assistant",
  "version": "1.0",
  "description": "AI-powered X (Twitter) post assistant using ChatGPT-4",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://api.openai.com; object-src 'self'",
  "content_scripts": [{
    "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
    "js": ["content.js"]
  }]
}